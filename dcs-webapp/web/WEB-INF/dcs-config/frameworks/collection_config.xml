<?xml version="1.0" encoding="UTF-8"?>
<frameworkConfigRecord 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:noNamespaceSchemaLocation="http://ns.nsdl.org/ncs/framework_config/1.00/schemas/dcsFrameworkConfig.xsd">
	<xmlFormat>collection_config</xmlFormat>
	<schemaInfo>
		<rootElementName>collectionConfigRecord</rootElementName>
		<schemaURI>http://ns.nsdl.org/ncs/collection_config/1.00/schemas/dcsCollectionConfig.xsd</schemaURI>
		<paths>
			<path pathName="id" requiredByMinimalRecord="true" requiredByCopyRecord="true" 
				  readOnly="true" >/collectionConfigRecord/collectionId</path>
			<path pathName="xmlFormat" readOnly="true" >/collectionConfigRecord/xmlFormat</path>
			<path pathName="authority" defaultValue="dcs">/collectionConfigRecord/authority</path>
		</paths>
	</schemaInfo>
	<editorInfo>
		<renderer>EditorRenderer</renderer>
		<baseRenderLevel>2</baseRenderLevel>
		<firstPage>collectionConfigRecord</firstPage>
		<rebuildOnStart>true</rebuildOnStart>
	</editorInfo>
	<name>collection configuration</name>
	<standAloneInfo>
		<recordsDir>not configured here - see "dcsConfig" in web.xml and server.xml</recordsDir>
	</standAloneInfo>
</frameworkConfigRecord>