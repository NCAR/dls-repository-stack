<?xml version="1.0" encoding="UTF-8"?>
<harvestRequest xmlns="http://ns.nsdl.org/MRingest/harvest_v1.00/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ns.nsdl.org/MRingest/harvest_v1.00/
	http://ns.nsdl.org/schemas/MRingest/harvest_v1.00.xsd" schemaVersion="1.00.000">
	
	<baseURL>@BASE_URL@</baseURL>
	
	<!-- Unique ID of the collection being harvested. Must match the Naming Authority of 
	this collection in the CRS and Metadata Repository -->
	<collectionNA>@COLLECTION_NA@</collectionNA>

	<collectionId>@COLLECTION_ID@</collectionId>
	
	<!-- The setSpec we assign to the resulting collection that corresponds to the harvested records.
	From collection record XPath /record/collection/setSpec -->
	<collectionSetSpec>@SET_SPEC@</collectionSetSpec>
	
	<!-- Type of run desired (check only? harvest? etc.). Values: check, harvest, incremental_harvest, full_reharvest -->
	<runType>@RUN_TYPE@</runType>
	
	<providerEmail>mr-ingest@ucar.org</providerEmail>

	<!-- Perform an incremental harvest from this date - the "from" value to use in OAI ListRecords harvest request.  
	The union is needed only because the CRS stupidly puts out empty fromDate elements, instead of omitting them. -->	
	<!-- <fromDate></fromDate> -->
	
	<!-- Lists each OAI set to be harvested. If no sets are specified then harvest(s) will have no set restriction -->
	<sets></sets>
	
	<!-- Which OAI metadata format to be harvested. At least one will always appear (oai_dc by default) -->
	<formats>
		<format>@FORMAT@</format>
	</formats>
		
	<!-- Whether or not this is the first harvest.  Collection registration database
	keeps track of harvest details, results, requirements. -->
	<firstHarvest>false</firstHarvest>
	
	<!-- The unique universal id for a harvest request, generated by the CRS.  
	This plus the UCARHarvestTimestamp will uniquely identify a harvest attempt. -->
	<uuid>@UUID@</uuid>
	
	<nativeFormat>@NATIVE_FORMAT@</nativeFormat>
	<protocol>@PROTOCOL@</protocol>
</harvestRequest>


