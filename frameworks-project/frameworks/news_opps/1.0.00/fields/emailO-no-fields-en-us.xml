<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/news-opps/1.0.00/non-vocab-fields.xsd">
	<field name="Email - (when describing an organization)" language="en-us" metaFormat="news_opps" metaVersion="1.0.00" path="/news-oppsRecord/contributors/contributor/organization/email">
		<definition>the organization's or department's email address</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2004-09-17">Enter email addresses in the following format: name@something.org</practice>
				<practice status="current" originDate="2004-09-17">When copying email addresses from web sites, double check them for accuracy and remove trailing periods.</practice>
			</dos>
			<donts>
				<practice status="current" originDate="2004-09-15">Do not use this field if the information is unknown or suspect.</practice>
			</donts>
		</bestPractices>

		<documentation>
			<obligation>optional</obligation>
			<min>0</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>string</XMLdataType>
			</XMLdataTypes>
			<domain>free text</domain>
			<example>name@something.org</example>
			<other>true</other>
			<notes>
				<note>The field also occurs with the following XPATH: /news-oppsRecord/contributors/contributor/person/email</note>
			</notes>
		</documentation>
	</field>
</metadataFieldInfo>
