<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/news-opps/1.0.00/non-vocab-fields.xsd">
	<field name="News/opps record" language="en-us" metaFormat="news_opps" metaVersion="1.0.00" path="/news-oppsRecord">
		<definition>the root element of the news and opportunity metadata record</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2004-10-26" link1="record ID, language, title, description, announcement URL, announcements, topics, audiences, archive date, record creation date and contributors" style1="bold">Complete the subfields of record ID, language, title, description, announcement URL, announcements, topics, audiences, archive date, record creation date and contributors. These are required fields in order to make a complete record.</practice>
			</dos>
		</bestPractices>

		<documentation>
			<children>
				<child>recordID</child>
				<child>language</child>
				<child>title</child>
				<child>description</child>
				<child>announcementURL</child>
				<child>announcements</child>
				<child>topics</child>
				<child>keywords</child>
				<child>audiences</child>
				<child>diversities</child>
				<child>locations</child>
				<child>archiveDate</child>
				<child>recordCreationDate</child>
				<child>otherDates</child>
				<child>contributors</child>
			</children>
			<obligation>required</obligation>
			<min>1</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>complex</XMLdataType>
			</XMLdataTypes>
			<domain>the children elements are the domain</domain>
			<example>&lt;title&gt;, &lt;description&gt;</example>
		</documentation>
	</field>
</metadataFieldInfo>
