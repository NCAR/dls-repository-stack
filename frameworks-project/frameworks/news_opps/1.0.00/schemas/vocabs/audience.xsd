<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified" version="1.0.00">
	<xsd:annotation>
		<xsd:documentation>*****  Schema Overview  *************************</xsd:documentation>
		<xsd:documentation>Controlled vocabulary schema for DLESE News and Opportunities metadata framework</xsd:documentation>
		<xsd:documentation>Developed and maintained by the DPC</xsd:documentation>
	</xsd:annotation>
	<xsd:annotation>
		<xsd:documentation>*****  History of Change  *************************</xsd:documentation>
		<xsd:documentation>2004-03-23: Removed: Digital Library Developer, Resource Developer, Family, Industry, Postdoc, Technical</xsd:documentation>
		<xsd:documentation>2004-03-23: Added: Developer</xsd:documentation>
		<xsd:documentation>2004-04-09: Changed 'Public'  to 'General interest'</xsd:documentation>
		<xsd:documentation>2004-06-04: Changed General interest to General public because the topic vocab changed Other to General interest; so General interest in this vocab no longer made sense</xsd:documentation>
		<xsd:documentation>2004-08-25: Changed librarian to information scientist</xsd:documentation>
		<xsd:documentation>2004-08-31: Changed information scientist to information specialist</xsd:documentation>
	</xsd:annotation>
	<xsd:simpleType name="audienceType">
		<xsd:annotation>
			<xsd:documentation>*****  audienceType  *************************</xsd:documentation>
		</xsd:annotation>
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="Developer"/>
			<xsd:enumeration value="Educator"/>
			<xsd:enumeration value="General public"/>
			<xsd:enumeration value="Information specialist"/>
			<xsd:enumeration value="Manager"/>
			<xsd:enumeration value="Researcher"/>
			<xsd:enumeration value="Student"/>
		</xsd:restriction>
	</xsd:simpleType>
