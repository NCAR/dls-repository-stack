<metadataFieldInfo xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.dlsciences.org/frameworks/fields" xsi:schemaLocation="http://www.dlsciences.org/frameworks/fields http://nldr.library.ucar.edu/metadata/vocabs/1.0/schemas/fields/authority.xsd">
  <field name="Authority" metaFormat="vocabs" metaVersion="1.0" language="en-us" path="/vocabTerm/sourceInfo/authority">
		<definition>Indicates which authority was used to verify the name</definition> 
		<terms>
			<termAndDeftn vocab="LOC">The form of name was verified in the Library of Congress authority file.</termAndDeftn>
			<termAndDeftn vocab="NCAR Library">NCAR Library policy and procedure dictate the choice and form of name.</termAndDeftn>
			<termAndDeftn vocab="Organization website">The form of name was verified using the organization's website</termAndDeftn>
		</terms>
		<bestPractices>
			<dos>
				<practice status="current" originDate="2010-06-04">This field is required.</practice> 
				<practice status="current" originDate="2010-06-04">This field cannot be repeated.</practice> 
				<practice status="current" originDate="2010-06-04">Select the authority you used in determining the authoritative form of name.</practice> 
			 </dos>
		</bestPractices>
		<documentation>
			<obligation>required</obligation>
			<min>1</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>string</XMLdataType>
			</XMLdataTypes>
			<domain>controlled vocabulary</domain>
			<example>LOC</example>
		</documentation>
  </field>
</metadataFieldInfo>
