<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified" version="1.0.00">
	<xsd:annotation>
		<xsd:documentation>*****  SCHEMA PURPOSE  *****</xsd:documentation>
		<xsd:documentation>Controlled vocabulary schema for the fields metadata documentation framework</xsd:documentation>
	</xsd:annotation>
	<xsd:annotation>
		<xsd:documentation>*****  HISTORY *****</xsd:documentation>
		<xsd:documentation>2004-04-30: Added hide</xsd:documentation>
	</xsd:annotation>
	<xsd:simpleType name="bpstatusType">
		<xsd:annotation>
			<xsd:documentation>*****  statusType  *****</xsd:documentation>
			<xsd:documentation>statusType - means the state of a cataloging best practice in terms</xsd:documentation>
			<xsd:documentation>current - the cataloging best practice is active</xsd:documentation>
			<xsd:documentation>new - the cataloging best practice is new and active but the purpose is to show newness</xsd:documentation>
			<xsd:documentation>obsolete - the cataloging best practice should no longer be used</xsd:documentation>
			<xsd:documentation>hide - the cataloging best practice may be under development, soon obsolete or is being tested</xsd:documentation>
		</xsd:annotation>
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="current"/>
			<xsd:enumeration value="new"/>
			<xsd:enumeration value="obsolete"/>
			<xsd:enumeration value="hide"/>
		</xsd:restriction>
	</xsd:simpleType>
