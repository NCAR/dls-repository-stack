<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified" version="1.0.00">
	<xsd:annotation>
		<xsd:documentation>*****  SCHEMA PURPOSE  *****</xsd:documentation>
		<xsd:documentation>Controlled vocabulary schema for the fields metadata documentation framework</xsd:documentation>
	</xsd:annotation>
	<xsd:annotation>
		<xsd:documentation>*****  HISTORY *****</xsd:documentation>
		<xsd:documentation>2004-08-26: Created this file</xsd:documentation>
	</xsd:annotation>
	<xsd:simpleType name="obligationType">
		<xsd:annotation>
			<xsd:documentation>*****  obligationType  *****</xsd:documentation>
			<xsd:documentation>choice means any one of the declared elements can occur but only one of them</xsd:documentation>
			<xsd:documentation>optional means the metadata is not required</xsd:documentation>
			<xsd:documentation>required means the metadata is required</xsd:documentation>
			<xsd:documentation>required metadata if parent tag is self-explanatory</xsd:documentation>
		</xsd:annotation>
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="choice"/>
			<xsd:enumeration value="optional"/>
			<xsd:enumeration value="required"/>
			<xsd:enumeration value="required metadata if parent tag is present"/>
		</xsd:restriction>
	</xsd:simpleType>
