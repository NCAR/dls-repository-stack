  <field name="GEM Education Level" metaFormat="mast" metaVersion="1.0" language="en-us" path="/record/educational/audiences/gemEdLevel">
		<definition attribution="GEM 2.0 Element Descriptions at http://www.thegateway.org/about/documentation/metadataElements">A general statement describing the education or training context. Alternatively, a more specific statement of the location of the audience in terms of its progression through an education or training context.</definition> 
		<vocabLevels number="1">
			<levelAndDeftn level="1" levelName="GEM Education Level" levelDeftn="A general statement describing the education or training context."/>
		</vocabLevels>

