<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.6.50/typeDetGeo.xsd">
	<field name="Detailed geometry - type" language="en-us" metaFormat="adn" metaVersion="0.6.50" path="/itemRecord/geospatialCoverages/geospatialCoverage/detGeos/detGeo/typeDetGeo">
		<definition>the type of geographic footprint</definition>

		<vocabLevels number="1">
			<levelAndDeftn level="1" levelName="Type" levelDeftn="the type of geographic footprint; see the allowed combination of terms below"/>
		</vocabLevels>

		<terms>
			<termAndDeftn vocab="Bounding box">a regular polygon, defined by 4 longitude-latitude pairs, that is parallel to the equator that encloses the area of interest</termAndDeftn>
			<termAndDeftn vocab="Point">a single longitude-latitude pair</termAndDeftn>
			<termAndDeftn vocab="Polygon">a closed polygon that is defined with at least 3 longitude-latitude pairs and where the beginning and ending points are the same</termAndDeftn>
			<termAndDeftn vocab="Polyline">a string of at least 3 longitude-latitude pairs where the beginning and ending points are not the same</termAndDeftn>
		</terms>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2005-05-04">Choose the appropriate detailed geometry type term.</practice>
			</dos>
			
			<examples>
				<practice status="current" originDate="2005-05-04">Use a polygon to represent the Valles Caldera in New Mexico, United States.</practice>
				<practice status="current" originDate="2005-05-04">Use multiple polygons to represent the state of California, one polygon for the continental area and another for the Channel Islands.</practice>
			</examples>
		</bestPractices>

		<documentation>
			<obligation>required metadata if parent tag is present</obligation>
			<min>1</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>string</XMLdataType>
			</XMLdataTypes>
			<domain>controlled vocabulary</domain>
			<example>Point, Polyline</example>
		</documentation>


	</field>
</metadataFieldInfo>
