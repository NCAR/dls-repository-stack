<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.6.50/non-vocab-fields.xsd">
	<field name="Language - of the resource" language="en-us" metaFormat="adn" metaVersion="0.6.50" path="/itemRecord/general/language">
		<definition>the language of the resource expressed generally as a two-letter abbreviation</definition>
		<vocabLevels number="1">
			<levelAndDeftn level="1" levelName="Language" levelDeftn="language as a two-letter abbreviation"/>
		</vocabLevels>
		<terms>
			<termAndDeftn vocab="en">English</termAndDeftn>
			<termAndDeftn vocab="en-us">U.S. English</termAndDeftn>
			<termAndDeftn vocab="fr">French</termAndDeftn>
			<termAndDeftn vocab="es">Spanish</termAndDeftn>
			<termAndDeftn vocab="ru">Russian</termAndDeftn>
			<termAndDeftn vocab="de">German</termAndDeftn>
			<termAndDeftn vocab="ja">Japanese</termAndDeftn>
			<termAndDeftn vocab="zh">Chinese</termAndDeftn>
		</terms>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2004-09-01">Select one language term.</practice>
			</dos>
			<donts>
				<practice status="current" originDate="2006-03-09">Do not enter free text.</practice>
			</donts>
		</bestPractices>
		<documentation>
			<obligation>required</obligation>
			<min>1</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>language</XMLdataType>
			</XMLdataTypes>
			<domain>ISO Code for two-letter language abbreviations</domain>
			<example>en-us, es, fr</example>
			<other>true</other>
			<notes>
				<note>Other XPATH: /itemRecord/metaMetadata/language</note>
				<note>This field is defined as xsd:language.</note>
				<note>Since W3C controls xsd:language, value enforcement is part of the XML specification.</note>
				<note>This field is an attribute on the language field.</note>
			</notes>
		</documentation>
	</field>
</metadataFieldInfo>
