<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.6.50/non-vocab-fields.xsd">
	<field name="Catalog entry - list - other" language="en-us" metaFormat="adn" metaVersion="0.6.50" path="/itemRecord/general/catalogEntries">
		<definition>a list of catalog information from different libraries/repositories that describe the same resource</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2006-02-27" link1="catalog entry - other" style1="bold">Complete the required subfield of catalog entry - other.</practice>
				<practice status="current" originDate="2006-09-18" link1="catalog entry - other" style1="bold">Repeat the subfield catalog entry - other as many times as needed to enter the list of names and identifiers of the different catalogs/libraries/repositories that describe the same resource that is being cataloged.</practice>
			</dos>
		</bestPractices>

		<documentation>
			<obligation>optional</obligation>
			<children>
				<child>catalog</child>
			</children>
			<min>0</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>complex</XMLdataType>
			</XMLdataTypes>
			<domain>the child element</domain>
			<example>&lt;catalog entry="COMET-000-000-000-123"&gt;COMET Collection&lt;/catalog&gt;</example>
			<other>true</other>
			<notes>
				<note>Other XPATH: /itemRecord/metaMetadata/catalogEntries</note>
			</notes>
		</documentation>


	</field>
</metadataFieldInfo>
