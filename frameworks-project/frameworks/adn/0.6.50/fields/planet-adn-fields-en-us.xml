<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.6.50/planet.xsd">
	<field name="Planet" language="en-us" metaFormat="adn" metaVersion="0.6.50" path="/itemRecord/geospatialCoverages/geospatialCoverage/body/planet">
		<definition>any of the celestial bodies that revolve around the sun in the solar system</definition>

		<vocabLevels number="1">
			<levelAndDeftn level="1" levelName="Planet" levelDeftn="any of the celestial bodies that revolve around the sun in the solar system; see the allowed combination of terms below; the planet part of the term is the phrase after the last colon"/>
		</vocabLevels>

		<terms>
			<termAndDeftn vocab="Earth">the third planet from the sun</termAndDeftn>
			<termAndDeftn vocab="Earth's Moon">the satellite that orbits Earth</termAndDeftn>
			<termAndDeftn vocab="Jupiter">the fifth planet from the sun</termAndDeftn>
			<termAndDeftn vocab="Mars">the fourth planet from the sun</termAndDeftn>
			<termAndDeftn vocab="Mercury">the first planet from the sun</termAndDeftn>
			<termAndDeftn vocab="Neptune">the eighth planet from the sun</termAndDeftn>
			<termAndDeftn vocab="Pluto">a dwarf planet</termAndDeftn>
			<termAndDeftn vocab="Saturn">the sixth planet from the sun</termAndDeftn>
			<termAndDeftn vocab="Uranus">the seventh planet from the sun</termAndDeftn>
			<termAndDeftn vocab="Venus">the second planet from the sun</termAndDeftn>
		</terms>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2005-04-27">Choose a planet term.</practice>
				<practice status="current" originDate="2006-09-21" link1="body - other planetary" style1="bold">For other celestial bodies, use the field body - other planetary.</practice>
			</dos>
		</bestPractices>

		<documentation>
			<obligation>choice</obligation>
			<min>1 or 0</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>string</XMLdataType>
			</XMLdataTypes>
			<domain>controlled vocabulary</domain>
			<example>Earth, Mars</example>
		</documentation>


	</field>
</metadataFieldInfo>
