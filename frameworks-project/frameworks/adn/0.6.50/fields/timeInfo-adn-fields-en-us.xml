<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.6.50/non-vocab-fields.xsd">
	<field name="Time - info" language="en-us" metaFormat="adn" metaVersion="0.6.50" path="/itemRecord/temporalCoverages/timeAndPeriod/timeInfo">
		<definition>a specific date and time set related to a resource</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2005-05-10" link1="time - AD" style1="bold" link2="time - BC" style2="bold" link3="time - relative" style3="bold">Complete at least one of the required subfields of time - AD, time - BC or time - relative. One of these fields is required metadata when completing time information.</practice>
			</dos>
			<donts>
				<practice status="current" originDate="2005-05-03">Do not put enter time period names.</practice>
			</donts>
		</bestPractices>

		<documentation>
			<children>
				<child>timeAD</child>
				<child>timeBC</child>
				<child>timeRelative</child>
			</children>
			<obligation>required</obligation>
			<min>1</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>complex</XMLdataType>
			</XMLdataTypes>
			<domain>the child elements</domain>
			<example>&lt;timeAD&gt;</example>
		</documentation>
	</field>
</metadataFieldInfo>
