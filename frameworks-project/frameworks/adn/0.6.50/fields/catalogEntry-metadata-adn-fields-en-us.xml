<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.6.50/non-vocab-fields.xsd">
	<field name="Catalog entry - repository" language="en-us" metaFormat="adn" metaVersion="0.6.50" path="/itemRecord/metaMetadata/catalogEntries/catalog">
		<definition>catalog information, like the collection name and record identification number, from the library/repository that directly describes the resource</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2006-02-27" link1="record id - library catalog number" style1="bold">Complete the required subfield of record id - library catalog number.</practice>
				<practice status="current" originDate="2006-09-18">Enter the name of the catalog/library/repository that is describing the resource.</practice>
			</dos>
			<examples>
				<practice status="current" originDate="2006-02-27">Name: My Library Collection.</practice>
				<practice status="current" originDate="2006-09-21" link1="record id - library catalog number" style1="bold">Record id: MY-LIBRARY-000-000-000-123 (for the subfield of record id - library catalog number).</practice>
			</examples>
		</bestPractices>

		<documentation>
			<obligation>required</obligation>
			<attributes>
				<attribute>entry</attribute>
			</attributes>
			<min>1</min>
			<max>unbounded</max>
			<XMLdataTypes>
				<XMLdataType>complex</XMLdataType>
				<XMLdataType>string</XMLdataType>
			</XMLdataTypes>
			<domain>the attribute and free text</domain>
			<example>&lt;catalog entry="MY-LIBRARY-000-000-000-123"&gt;My Library Collection&lt;/catalog&gt;</example>
			<other>true</other>
			<notes>
				<note>Other XPATH: /itemRecord/general/catalogEntries/catalog</note>
			</notes>
		</documentation>


	</field>
</metadataFieldInfo>
