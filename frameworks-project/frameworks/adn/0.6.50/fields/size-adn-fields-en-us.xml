<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.6.50/non-vocab-fields.xsd">
	<field name="Size" language="en-us" metaFormat="adn" metaVersion="0.6.50" path="/itemRecord/technical/online/size">
		<definition>the actual size (not compressed size) of a resource in bytes or megabytes etc.</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2006-03-01">Generally use for resources, larger than 5 megabytes.</practice>
				<practice status="current" originDate="2006-03-01">Include the units of measure like bytes, megabytes or gigabytes, etc.</practice>
			</dos>

			<donts>
				<practice status="current" originDate="2006-03-01">Do not use compressed size.</practice>
			</donts>
			<examples>
				<practice status="current" originDate="2006-03-01">5.3 megabytes</practice>
			</examples>
		</bestPractices>

		<documentation>
			<obligation>optional</obligation>
			<min>0</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>string</XMLdataType>
			</XMLdataTypes>
			<domain>free text</domain>
			<example>5.3 megabytes</example>
		</documentation>


	</field>
</metadataFieldInfo>
