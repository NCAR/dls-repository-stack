<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.6.50/non-vocab-fields.xsd">
	<field name="Source info - place - bounding box" language="en-us" metaFormat="adn" metaVersion="0.6.50" path="/itemRecord/geospatialCoverages/geospatialCoverage/boundBox/bbPlaces/place/sourceDesc">
		<definition>a description of or further information about the source cited for the bounding box place name</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2006-07-07">When accessing digital references, include the date when the reference is accessed.</practice>
				<practice status="current" originDate="2006-07-07">When accessing hardcopy materials, include appropriate citation information.</practice>
			</dos>
			<examples>
				<practice status="current" originDate="2005-04-28">The Alexandria Digital Library (ADL) Gazetteer was accessed on 2001-08-06.</practice>
			</examples>
		</bestPractices>

		<documentation>
			<obligation>optional</obligation>
			<min>0</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>string</XMLdataType>
			</XMLdataTypes>
			<domain>free text</domain>
			<example>The Alexandria Digital Library (ADL) Gazetteer was accessed on 2001-08-06.</example>
			<other>true</other>
			<notes>
				<note>Other XPATH: /itemRecord/geospatialCoverages/geospatialCoverage/detGeos/detGeo/detPlaces/place/sourceDesc</note>
				<note>Other XPATH: /itemRecord/geospatialCoverages/geospatialCoverage/boundBox/bbEvents/event/sourceDesc</note>
				<note>Other XPATH: /itemRecord/geospatialCoverages/geospatialCoverage/detGeos/detGeo/detEvents/event/sourceDesc</note>
				<note>Other XPATH: /itemRecord/temporalCoverages/timeAndPeriod/periods/period/sourceDesc</note>
			</notes>
		</documentation>


	</field>
</metadataFieldInfo>
