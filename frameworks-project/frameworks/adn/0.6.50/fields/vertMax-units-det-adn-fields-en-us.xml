<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.6.50/units-vertical.xsd">
	<field name="Vertical maximum units - detailed geometry" language="en-us" metaFormat="adn" metaVersion="0.6.50" path="/itemRecord/geospatialCoverages/geospatialCoverage/detGeos/detGeo/detVert/vertMax/@units">
		<definition>the units of measure for the maximum altitude or depth value</definition>

		<vocabLevels number="1">
			<levelAndDeftn level="1" levelName="Units" levelDeftn="the units of measure for the maximum altitude or depth value; see the allowed terms below"/>
		</vocabLevels>

		<terms>
			<termAndDeftn vocab="centimeters (cm)">self-explanatory</termAndDeftn>
			<termAndDeftn vocab="fathoms (fathoms)">self-explanatory</termAndDeftn>
			<termAndDeftn vocab="feet (ft)">self-explanatory</termAndDeftn>
			<termAndDeftn vocab="inches (in)">self-explanatory</termAndDeftn>
			<termAndDeftn vocab="kilometers (km)">self-explanatory</termAndDeftn>
			<termAndDeftn vocab="meters (m)">self-explanatory</termAndDeftn>
			<termAndDeftn vocab="miles (mi)">self-explanatory</termAndDeftn>
		</terms>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2005-05-02">Choose the appropriate units.</practice>
				<practice status="current" originDate="2005-05-02">Choose the same units for both the maximum and minimum values.</practice>
			</dos>
			<donts>
				<practice status="current" originDate="2005-05-02">Do not enter vertical information or units if the units cannot be determined.</practice>
				<practice status="current" originDate="2005-05-02">Do not mix units between the maximum and minimum values.</practice>
			</donts>
			<examples>
				<practice status="current" originDate="2005-05-02">Denver, Colorado, United States is 5280 feet above sea level.</practice>
			</examples>
		</bestPractices>

		<documentation>
			<obligation>required metadata if parent tag is present</obligation>
			<min>1</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>string</XMLdataType>
			</XMLdataTypes>
			<domain>controlled vocabulary</domain>
			<example>centimeters (cm)</example>
			<other>true</other>
			<notes>
				<note>Other XPATH: /itemRecord/geospatialCoverages/geospatialCoverage/boundBox/bbVert/vertMax/@units</note>
				<note>Other XPATH: /itemRecord/geospatialCoverages/geospatialCoverage/boundBox/bbVert/vertMin/@units</note>
				<note>Other XPATH: /itemRecord/temporalCoverages/timeAndPeriod/timeInfo/timeRelative/begin/@units</note>
				<note>Other XPATH: /itemRecord/geospatialCoverages/geospatialCoverage/detGeos/detGeo/detVert/vertMin/@units</note>
				<note>Other XPATH: /itemRecord/temporalCoverages/timeAndPeriod/timeInfo/timeRelative/end/@units</note>
			</notes>
		</documentation>


	</field>
</metadataFieldInfo>
