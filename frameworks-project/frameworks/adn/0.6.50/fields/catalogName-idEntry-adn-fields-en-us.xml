<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.6.50/non-vocab-fields.xsd">
	<field name="Catalog name - record id relation" language="en-us" metaFormat="adn" metaVersion="0.6.50" path="/itemRecord/relations/relation/idEntry/@catalogName">
		<definition>the name of the catalog/library/repository in which the related resource resides</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2006-02-28">Enter catalog/library/repository name information if helps to establish the link to the related resource.</practice>
				<practice status="current" originDate="2006-02-28">Include a URL to the catalog name, if appropriate.</practice>
				<practice status="current" originDate="2006-02-28">Spell out the complete name.</practice>
			</dos>
			<donts>
				<practice status="current" originDate="2006-02-28">Do not include the title of the related resource.</practice>
			</donts>

			<examples>
				<practice status="current" originDate="2006-02-28">Alexandria Digital Library.</practice>
			</examples>
		</bestPractices>

		<documentation>
			<obligation>optional</obligation>
			<min>0</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>string</XMLdataType>
			</XMLdataTypes>
			<domain>free text</domain>
			<example>Alexandria Digital Library</example>
			<other>true</other>
			<notes>
				<note>Other XPATH: /itemRecord/relations/relation/urlEntry/@catalogName</note>
			</notes>
		</documentation>
	</field>
</metadataFieldInfo>
