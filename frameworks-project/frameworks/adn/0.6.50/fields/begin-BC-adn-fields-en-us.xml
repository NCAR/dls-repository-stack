<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.6.50/non-vocab-fields.xsd">
	<field name="Begin - BC" language="en-us" metaFormat="adn" metaVersion="0.6.50" path="/itemRecord/temporalCoverages/timeAndPeriod/timeInfo/timeBC/begin">
		<definition>a period start time expressed as a Gregorian year</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2005-05-10">Use when expressing dates (in Gregorian years) that are Before Common Era (BC).</practice>	
				<practice status="current" originDate="2005-05-10">Enter data in the following format: YYYY.</practice>
				<practice status="current" originDate="2005-05-10">To express dates before 0000 A.D., use a minus sign: -YYYY.</practice>
			</dos>
			<examples>
				<practice status="current" originDate="2005-05-10">Queen Cleopatra's reign began: -0051 (for 51 B.C.) to -0030 (for 30 B.C.)</practice>
			</examples>
		</bestPractices>

		<documentation>
			<obligation>required metadata if parent tag is present</obligation>
			<min>1</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>gYear</XMLdataType>
			</XMLdataTypes>
			<domain>integers</domain>
			<example>-8700, 2500, 0000</example>
			<other>true</other>
			<notes>
				<note>Other XPATH: /itemRecord/temporalCoverages/timeAndPeriod/timeInfo/timeRelative/begin</note>
				<note>Other XPATH: /itemRecord/temporalCoverages/timeAndPeriod/timeInfo/timeAD/begin</note>
			</notes>
		</documentation>
	</field>
</metadataFieldInfo>
