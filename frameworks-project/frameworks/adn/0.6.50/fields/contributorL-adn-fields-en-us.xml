<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.6.50/non-vocab-fields.xsd">
	<field name="Contributor - resource creator" language="en-us" metaFormat="adn" metaVersion="0.6.50" path="/itemRecord/lifecycle/contributors/contributor">
		<definition>either an organization or person responsible for the intellectual content of a resource</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2004-10-28" link1="role" style1="bold" link2="date - contribution - resource creator" style2="bold">Complete the required subfields of role and date - contribution - resource creator.</practice>
				<practice status="current" originDate="2004-09-03" link1="person" style1="bold" link2="organization" style2="bold">Complete either the person subfield or the organization subfield.</practice>
			</dos>
			<donts>
				<practice status="current" originDate="2004-12-02">Do not include webmasters as contributors.</practice>
			</donts>
		</bestPractices>

		<documentation>
			<attributes>
				<attribute>role</attribute>
				<attribute>date</attribute>
			</attributes>
			<children>
				<child>organization</child>
				<child>person</child>
			</children>
			<obligation>required</obligation>
			<min>1</min>
			<max>unbounded</max>
			<XMLdataTypes>
				<XMLdataType>complex</XMLdataType>
			</XMLdataTypes>
			<domain>the attributes and child elements; date formats and the controlled vocabulary for role</domain>
			<example>&lt;organization&gt;, &lt;person&gt;, 2004-10-26</example>
			<other>true</other>
			<notes>
				<note>The list of organizations or people includes authors, contacts, publishers or principal investigators.</note>
				<note>Other XPATH: /itemRecord/metaMetadata/contributors/contributor</note>
			</notes>
		</documentation>
	</field>
</metadataFieldInfo>
