<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.7.00/role-lifecycle.xsd">
	<field name="Role - resource creator" language="en-us" metaFormat="adn" metaVersion="0.7.00" path="/itemRecord/lifecycle/contributors/contributor/@role">
		<definition>the role of a person or organization in creating the intellectual content of a resource</definition>

		<vocabLevels number="1">
			<levelAndDeftn level="1" levelName="Role" levelDeftn="the role of a person or organization in creating a resource"/>
		</vocabLevels>
		<terms>
			<termAndDeftn vocab="Author">a person or organization who creates intellectual content</termAndDeftn>
			<termAndDeftn vocab="Contact">a person or organization who can provide more information about the intellectual content</termAndDeftn>
			<termAndDeftn vocab="Contributor">a person or organization who provides intellectual content or information but not as the primary author</termAndDeftn>
			<termAndDeftn vocab="Editor">a person or organization who performs quality control over the intellectual content</termAndDeftn>
			<termAndDeftn vocab="Principal Investigator">a person funded to create intellectual content by a grant, award or contract</termAndDeftn>
			<termAndDeftn vocab="Publisher">an organization who makes intellectual content accessible</termAndDeftn>
	</terms>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2005-10-05">Choose a single role from the term list.</practice>
			</dos>
		</bestPractices>

		<documentation>
			<obligation>required</obligation>
			<min>1</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>string</XMLdataType>
			</XMLdataTypes>
			<domain>controlled vocabulary</domain>
			<example>Publisher, Author</example>
			<other>true</other>
			<notes>
				<note>Other XPATH: /itemRecord/metaMetadata/contributors/contributor/@role</note>
			</notes>
		</documentation>
	</field>
</metadataFieldInfo>
