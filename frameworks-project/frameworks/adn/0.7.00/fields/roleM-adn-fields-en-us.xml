<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.7.00/role-metaMetadata.xsd">
	<field name="Role - resource cataloger" language="en-us" metaFormat="adn" metaVersion="0.7.00" path="/itemRecord/metaMetadata/contributors/contributor/@role">
		<definition>the role of a person or organization in describing the resource with metadata</definition>

		<vocabLevels number="1">
			<levelAndDeftn level="1" levelName="Role" levelDeftn="the role of a person or organization in describing the resource"/>
		</vocabLevels>
		<terms>
			<termAndDeftn vocab="Creator">a person or organization who creates metadata content</termAndDeftn>
			<termAndDeftn vocab="Editor">a person or organization who performs quality control over metadata</termAndDeftn>
			<termAndDeftn vocab="Validator">a person or organization who approves metadata content</termAndDeftn>
	</terms>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2005-10-05">Choose a single role from the term list.</practice>
			</dos>
		</bestPractices>

		<documentation>
			<obligation>required metadata if parent tag is present</obligation>
			<min>1</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>string</XMLdataType>
			</XMLdataTypes>
			<domain>controlled vocabulary</domain>
			<example>Creator, Editor</example>
			<other>true</other>
			<notes>
				<note>Other XPATH: /itemRecord/lifecycle/contributors/contributor/@role</note>
			</notes>
		</documentation>
	</field>
</metadataFieldInfo>
