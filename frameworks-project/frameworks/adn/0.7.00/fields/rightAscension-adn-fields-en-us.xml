<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.7.00/non-vocab-fields.xsd">
	<field name="Right ascension" language="en-us" metaFormat="adn" metaVersion="0.7.00" path="/itemRecord/objectsInSpace/object/rightAscension">
		<definition>the hour (angular distance) of a celestial object on a celestial map (basically the celestial equivalent of Earth's longitude beginning at a line running pole to pole and cutting through eastern Pegasus)
</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2006-02-27">Uses time (hours, minutes and seconds) as measurement units.</practice>
				<practice status="current" originDate="2006-02-28">Enter values in the format of hh:mm:ss.</practice>
			</dos>
			<examples>
				<practice status="current" originDate="2006-02-27">17:57</practice>
			</examples>
		</bestPractices>

		<documentation>
			<obligation>required metadata if parent tag is present</obligation>
			<min>1</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>time</XMLdataType>
			</XMLdataTypes>
			<domain>00:00:00 to 24:00:00</domain>
			<example>17:57</example>
		</documentation>


	</field>
</metadataFieldInfo>
