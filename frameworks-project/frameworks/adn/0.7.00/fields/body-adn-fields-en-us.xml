<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.7.00/non-vocab-fields.xsd">
	<field name="Body" language="en-us" metaFormat="adn" metaVersion="0.7.00" path="/itemRecord/geospatialCoverages/geospatialCoverage/body">
		<definition>any of the celestial bodies that revolve around the sun in the solar system or moons that revolve around planets</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2006-03-03" link1="planet" style1="bold" link2="other planetary body" style2="bold">Complete either the planet or other planetary body subfield.</practice>
			</dos>
			<donts>
				<practice status="current" originDate="2006-03-03">Do not use to describe comets or asteroids.</practice>
			</donts>
		</bestPractices>

		<documentation>
			<children>
				<child>planet</child>
				<child>otherPlanetaryBody</child>
			</children>
			<obligation>required metadata if parent tag is present</obligation>
			<min>1</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>complex</XMLdataType>
			</XMLdataTypes>
			<domain>the child elements</domain>
			<example>&lt;planet&gt;, &lt;otherPlanetaryBody&gt;</example>
			<notes>
				<note>Requires a choice be made in terms of the child element used.</note>
			</notes>
		</documentation>


	</field>
</metadataFieldInfo>
