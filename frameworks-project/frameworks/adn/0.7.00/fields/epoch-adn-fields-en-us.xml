<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.7.00/non-vocab-fields.xsd">
	<field name="Epoch" language="en-us" metaFormat="adn" metaVersion="0.7.00" path="/itemRecord/objectsInSpace/object/epoch">
		<definition>an instant in time for which the positions of celestial objects are given</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2006-02-27">Represents 50 year steps to redraw the celestial grid due to equinox progression.</practice>
			</dos>
			<examples>
				<practice status="current" originDate="2006-02-27">epoch2000.0.</practice>
				<practice status="current" originDate="2006-09-18">epoch1950.0</practice>
			</examples>
		</bestPractices>

		<documentation>
			<obligation>required metadata if parent tag is present</obligation>
			<min>1</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>string</XMLdataType>
			</XMLdataTypes>
			<domain>free text</domain>
			<example>epoch1950.0, epoch2000.0</example>
		</documentation>


	</field>
</metadataFieldInfo>
