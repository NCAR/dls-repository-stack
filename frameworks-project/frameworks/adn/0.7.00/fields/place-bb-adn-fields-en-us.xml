<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.7.00/non-vocab-fields.xsd">
	<field name="Place info - bounding box" language="en-us" metaFormat="adn" metaVersion="0.7.00" path="/itemRecord/geospatialCoverages/geospatialCoverage/boundBox/bbPlaces/place">
		<definition>information on the name of a location or place that is covered by a bounding box including name, name source and source description</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2005-05-02" link1="name - place - bounding box" style1="bold" link2="source - place - bounding box" style2="bold">Complete the required subfields of name - place - bounding box and source - place - bounding box.</practice>
			</dos>
		</bestPractices>

		<documentation>
			<children>
				<child>name</child>
				<child>source</child>
				<child>IDandURL</child>
				<child>sourceDesc</child>
			</children>
			<obligation>required metadata if parent tag is present</obligation>
			<min>1</min>
			<max>unbounded</max>
			<XMLdataTypes>
				<XMLdataType>complex</XMLdataType>
			</XMLdataTypes>
			<domain>the child elements</domain>
			<example>&lt;name&gt;, &lt;source&gt;</example>
			<other>true</other>
			<notes>
				<note>Other XPATH: /itemRecord/geospatialCoverages/geospatialCoverage/detGeos/detGeo/detPlaces/place</note>
				<note>Other XPATH: /itemRecord/general/simplePlacesAndEvents/placeAndEvent/place</note>
			</notes>
		</documentation>


	</field>
</metadataFieldInfo>
