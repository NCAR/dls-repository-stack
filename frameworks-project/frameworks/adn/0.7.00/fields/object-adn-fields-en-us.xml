	<field name="Object" language="en-us" metaFormat="adn" metaVersion="0.7.00" path="/itemRecord/objectsInSpace/object">
		<definition>an object in space that is defined using the convention of right ascension, declination and epoch</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2005-04-19" link1="right ascension" style1="bold" link2="declination" style2="bold" link3="epoch" style3="bold">Complete the subfields of right ascension, declination and epoch. These are the required fields when completing objects in space information.</practice>
			</dos>
		</bestPractices>

		<documentation>
			<children>
				<child>rightAscension</child>
				<child>declination</child>
				<child>epoch</child>
			</children>
			<obligation>required metadata if parent tag is present</obligation>
			<min>1</min>
			<max>unbounded</max>
			<XMLdataTypes>
				<XMLdataType>complex</XMLdataType>
			</XMLdataTypes>
			<domain>the child element</domain>
			<example>&lt;rightAscension&gt;, &lt;declination&gt;, &lt;epoch&gt;</example>
		</documentation>


	</field>
</metadataFieldInfo>
