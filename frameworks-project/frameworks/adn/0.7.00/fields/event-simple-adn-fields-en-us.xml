<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/adn-item/0.7.00/non-vocab-fields.xsd">
	<field name="Event info - simple" language="en-us" metaFormat="adn" metaVersion="0.7.00" path="/itemRecord/general/simplePlacesAndEvents/placeAndEvent/event">
		<definition>the name of an event, without the use of geospatial coordinates, that is the subject or primary content of a resource</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2005-05-05">Capitalize proper nouns.</practice>
				<practice status="current" originDate="2005-05-05">The event should have affected the entered place.</practice>
			</dos>
			<examples>
				<practice status="current" originDate="2005-05-05">Hurricane Fran.</practice>
				<practice status="current" originDate="2005-05-05">Valentine's Day snowstorm.</practice>
				<practice status="current" originDate="2005-05-05">San Francisco earthquake.</practice>
				<practice status="current" originDate="2005-05-05">Mt. St. Helen's eruption.</practice>
				<practice status="current" originDate="2005-05-05">Hayman wildfire.</practice>
			</examples>
		</bestPractices>

		<documentation>
			<obligation>optional</obligation>
			<min>0</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>string</XMLdataType>
			</XMLdataTypes>
			<domain>free text</domain>
			<example>Valentine's Day Snowstorm</example>
			<other>true</other>
			<notes>
				<note>Other XPATH: /itemRecord/geospatialCoverages/geospatialCoverage/detGeos/detGeo/detEvents/event</note>
				<note>Other XPATH: /itemRecord/geospatialCoverages/geospatialCoverage/boundBox/bbEvents/event</note>
			</notes>
		</documentation>


	</field>
</metadataFieldInfo>
