	<xsd:annotation>
		<xsd:documentation>***********************  Simple Types (alpha order) *************************************</xsd:documentation>
	</xsd:annotation>
	<xsd:simpleType name="NETStechnologyContentStandardsType">
		<xsd:annotation>
			<xsd:documentation>
				******************************  NETStechnologyContentStandardsType  **********************************
				Lists the values that will appear in the metadata record
			</xsd:documentation>
		</xsd:annotation>
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="NETS:Basic operations and concepts:Students demonstrate a sound understanding of the nature and operation of technology systems"/>
			<xsd:enumeration value="NETS:Basic operations and concepts:Students are proficient in the use of technology"/>
			<xsd:enumeration value="NETS:Social, ethical, and human issues:Students understand the ethical, cultural, and societal issues related to technology"/>
			<xsd:enumeration value="NETS:Social, ethical, and human issues:Students practice responsible use of technology systems, information, and software"/>
			<xsd:enumeration value="NETS:Social, ethical, and human issues:Students develop positive attitudes toward technology uses that support lifelong learning, collaboration, personal pursuits, and productivity"/>
			<xsd:enumeration value="NETS:Technology productivity tools:Students use technology tools to enhance learning, increase productivity, and promote creativity"/>
			<xsd:enumeration value="NETS:Technology productivity tools:Students use productivity tools to collaborate in constructing technology-enhanced models, prepare publications, and produce other creative works"/>
			<xsd:enumeration value="NETS:Technology communications tools:Students use telecommunications to collaborate, publish, and interact with peers, experts, and other audiences"/>
			<xsd:enumeration value="NETS:Technology communications tools:Students use a variety of media and formats to communicate information and ideas effectively to multiple audiences"/>
			<xsd:enumeration value="NETS:Technology research tools:Students use technology to locate, evaluate, and collect information from a variety of sources"/>
			<xsd:enumeration value="NETS:Technology research tools:Students use technology tools to process data and report results"/>
			<xsd:enumeration value="NETS:Technology research tools:Students evaluate and select new information resources and technological innovations based on the appropriateness for specific tasks"/>
			<xsd:enumeration value="NETS:Technology problem-solving and decision-making tools:Students use technology resources for solving problems and making informed decisions"/>
			<xsd:enumeration value="NETS:Technology problem-solving and decision-making tools:Students employ technology in the development of strategies for solving problems in the real world"/>
		</xsd:restriction>
	</xsd:simpleType>
	<xsd:simpleType name="NETStechnologyContentStandardsLeafType">
		<xsd:annotation>
			<xsd:documentation>
				******************************  NETStechnologyContentStandardsLeafType  **********************************
				Lists leaf values
			</xsd:documentation>
		</xsd:annotation>
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="Students demonstrate a sound understanding of the nature and operation of technology systems"/>
			<xsd:enumeration value="Students are proficient in the use of technology"/>
			<xsd:enumeration value="Students understand the ethical, cultural, and societal issues related to technology"/>
			<xsd:enumeration value="Students practice responsible use of technology systems, information, and software"/>
			<xsd:enumeration value="Students develop positive attitudes toward technology uses that support lifelong learning, collaboration, personal pursuits, and productivity"/>
			<xsd:enumeration value="Students use technology tools to enhance learning, increase productivity, and promote creativity"/>
			<xsd:enumeration value="Students use productivity tools to collaborate in constructing technology-enhanced models, prepare publications, and produce other creative works"/>
			<xsd:enumeration value="Students use telecommunications to collaborate, publish, and interact with peers, experts, and other audiences"/>
			<xsd:enumeration value="Students use a variety of media and formats to communicate information and ideas effectively to multiple audiences"/>
			<xsd:enumeration value="Students use technology to locate, evaluate, and collect information from a variety of sources"/>
			<xsd:enumeration value="Students use technology tools to process data and report results"/>
			<xsd:enumeration value="Students evaluate and select new information resources and technological innovations based on the appropriateness for specific tasks"/>
			<xsd:enumeration value="Students use technology resources for solving problems and making informed decisions"/>
			<xsd:enumeration value="Students employ technology in the development of strategies for solving problems in the real world"/>
		</xsd:restriction>
	</xsd:simpleType>
