  <field name="Institutional division - organization" metaFormat="osm" metaVersion="1.1" language="en-us" path="/record/contributors/organization/affiliation/instDivision">
		<definition>a division of an organization</definition> 

		<vocabLevels number="1">
			<levelAndDeftn level="1" levelName="Institutional division" levelDeftn="a division of an organization"/>
		</vocabLevels>
		
		 <bestPractices>
			<dos>
				<practice status="current" originDate="2010-05-31">This is an required field.</practice> 
				<practice status="current" originDate="2010-05-31">This field cannot be repeated.</practice>
				<practice status="current" originDate="2010-05-31">Use only for UCAR divisions.</practice>
				<practice status="current" originDate="2010-06-30">Select values from the current list of UCAR divisions first.</practice> 
				<practice status="current" originDate="2010-06-30">If you can not find the desired UCAR division on the current list, use the historical list.</practice> 
				<practice status="current" originDate="2010-06-30">If you can not find the desired UCAR division on the current or historical lists, please contact OpenSky.</practice> 
			 </dos>
			 <donts>
				 <practice status="current" originDate="2010-05-31">Do not use this field for non-UCAR divisions.</practice> 
			 </donts>
		 </bestPractices>
		 <documentation>
				<obligation>required metadata if parent tag is present</obligation>
				<min>1</min>
				<max>unbounded</max>
				<XMLdataTypes>
					<XMLdataType>string</XMLdataType>
				</XMLdataTypes>
				<domain>controlled vocabulary</domain>
				<example>University Corporation For Atmospheric Research (UCAR):Corporate Affairs (CA)</example>
			</documentation>
  </field>
