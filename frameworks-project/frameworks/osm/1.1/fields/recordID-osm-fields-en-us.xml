<metadataFieldInfo xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.dlsciences.org/frameworks/fields" xsi:schemaLocation="http://www.dlsciences.org/frameworks/fields http://nldr.library.ucar.edu/metadata/osm/1.1/schemas/fields/non-vocab-fields.xsd">
  <field name="Record ID" metaFormat="osmt" metaVersion="1.1" language="en-us" path="/record/general/recordID">
		<definition>the library identification number of the resource being cataloged</definition> 
		 <bestPractices>
				<dos>
					 <practice status="current" originDate="2008-10-20">Use unique text strings.</practice> 
					  <practice status="current" originDate="2008-10-20">DLS cataloging tools use automatic means to generate record ID numbers.</practice>
					   <practice status="current" originDate="2008-10-20"></practice>
			 </dos>
			 <donts>
					 <practice status="current" originDate="2008-10-20">Do not repeat record ID numbers within a collection.</practice>
					  <practice status="current" originDate="2008-10-20">Generally avoid spaces, apostrophes, quotes, slashes, less than or greater than signs, question marks, equal signs or URLs as part of record ID numbers.</practice>
					   <practice status="current" originDate="2008-10-20">Do not use just numbers; rather include a text label with a string of numbers.</practice>
			 </donts>
			 <examples>
					<practice status="current" originDate="2010-05-31">xxx</practice>
			</examples>
		 </bestPractices>
		 <documentation>
				<obligation>required</obligation>
				<min>1</min>
				<max>1</max>
				<XMLdataTypes>
					<XMLdataType>string</XMLdataType>
				</XMLdataTypes>
				<domain></domain>
				<example>TST-OSM_NEXT-000-000-000-00</example>
			</documentation>
  </field>
</metadataFieldInfo>
