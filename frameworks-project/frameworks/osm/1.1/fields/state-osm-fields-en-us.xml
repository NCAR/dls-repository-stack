<metadataFieldInfo xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.dlsciences.org/frameworks/fields" xsi:schemaLocation="http://www.dlsciences.org/frameworks/fields http://nldr.library.ucar.edu/metadata/osm/1.1/schemas/fields/non-vocab-fields.xsd">
  <field name="State" metaFormat="osm" metaVersion="1.1" language="en-us" path="/record/coverage/location/@state">
		<definition>a first-order divisional unit of a nation</definition> 
		 <bestPractices>
			<dos>
				<practice status="current" originDate="2010-05-31">This field is optional.</practice> 
				<practice status="current" originDate="2010-05-31">To enter more than one state, add another location tag set.</practice> 
				<practice status="current" originDate="2010-05-31">Use the provided controlled vocabulary.</practice> 
				<practice status="current" originDate="2010-05-31">If new state/province information needs to be added for a country, contact the OpenSky administrator.</practice> 
			 </dos>
			 <donts>
				 <practice status="current" originDate="2010-05-31">Do not include city or country information.</practice> 
			 </donts>
			 <examples>
				<practice status="current" originDate="2010-05-31">Washington DC United States: Enter US-DC (for District of Columbia) for the state.</practice>
			</examples>
		 </bestPractices>
		 <documentation>
				<obligation>optional</obligation>
				<min>0</min>
				<max>1</max>
				<XMLdataTypes>
					<XMLdataType>string</XMLdataType>
				</XMLdataTypes>
				<domain>controlled vocabulary</domain>
				<example>US-CO (for Colorado, United States), ES-GR (for Granada, Spain)</example>
			</documentation>
  </field>
</metadataFieldInfo>
