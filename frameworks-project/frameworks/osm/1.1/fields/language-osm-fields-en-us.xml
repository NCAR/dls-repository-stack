<metadataFieldInfo xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.dlsciences.org/frameworks/fields" xsi:schemaLocation="http://www.dlsciences.org/frameworks/fields http://nldr.library.ucar.edu/metadata/osm/1.1/schemas/fields/language.xsd">
  <field name="Language" metaFormat="osm" metaVersion="1.1" language="en-us" path="/record/classify/language">
		<definition>the primary human language or languages of the resource content</definition> 

		<terms>
			<termAndDeftn vocab="de">German</termAndDeftn>
			<termAndDeftn vocab="en">English</termAndDeftn>
			<termAndDeftn vocab="es">Spanish</termAndDeftn>
			<termAndDeftn vocab="fr">French</termAndDeftn>
			<termAndDeftn vocab="it">Italian</termAndDeftn>
			<termAndDeftn vocab="nl">Dutch</termAndDeftn>
			<termAndDeftn vocab="not applicable">language not spoken by humans</termAndDeftn>
			
		</terms>
		 <bestPractices>
			<dos>
				<practice status="current" originDate="2010-05-31">This is a required field.</practice> 
				<practice status="current" originDate="2010-05-31">This field can be repeated to represent resources that may be in more than a single language.</practice> 
				 <practice status="current" originDate="2010-05-31">For music, choose not applicable.</practice> 
			 </dos>
		 </bestPractices>
		 <documentation>
				<obligation>required</obligation>
				<min>1</min>
				<max>unbounded</max>
				<XMLdataTypes>
					<XMLdataType>string</XMLdataType>
				</XMLdataTypes>
				<domain>controlled vocabulary</domain>
				<example>en</example>
			</documentation>
  </field>
</metadataFieldInfo>
