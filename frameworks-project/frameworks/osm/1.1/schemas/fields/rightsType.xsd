<xsd:schema targetNamespace="http://www.dlsciences.org/frameworks/fields" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.dlsciences.org/frameworks/fields" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xsd:annotation>
		<xsd:documentation>************************************************</xsd:documentation>
		<xsd:documentation>***** SCHEMA PUPOSE  and INTENT  *****</xsd:documentation>
		<xsd:documentation>************************************************</xsd:documentation>
		<xsd:documentation>Defines an XML instance document for managing metadata framework documentation</xsd:documentation>
		<xsd:documentation>To document metadata fields that use a controlled vocaublary.</xsd:documentation>
		<xsd:documentation>The metadataFieldInfo instance document tracks metadata field names, metadata field definitions, vocabulary terms, field id numbers, term id numbers, cataloging best  practices and information about each metadata field (min, max, obligation, domain, XML datatype, other occurrence and examples)</xsd:documentation>
		<xsd:documentation>See the fields.xsd schemas (included as part of this schema) for further schema explanations</xsd:documentation>

		<xsd:documentation>******************************</xsd:documentation>
		<xsd:documentation>*****  NAMESPACES  *****</xsd:documentation>
		<xsd:documentation>******************************</xsd:documentation>
		<xsd:documentation>This schema has a target namespace</xsd:documentation>
		<xsd:documentation>This schema has a default namespace</xsd:documentation>

		<xsd:documentation>********************************</xsd:documentation>
		<xsd:documentation>*****  ROOT ELEMENT *****</xsd:documentation>
		<xsd:documentation>********************************</xsd:documentation>
		<xsd:documentation>This schema does not have a root element. See fields.xsd for the root element.</xsd:documentation>

		<xsd:documentation>****************************************************</xsd:documentation>
		<xsd:documentation>***** SCHEMAS TO INCLUDE or IMPORT *****</xsd:documentation>
		<xsd:documentation>****************************************************</xsd:documentation>
		<xsd:documentation>fields.xsd - contains the root element</xsd:documentation>
		<xsd:documentation>union-vocabs.xsd - provides access to the controlled vocabularies</xsd:documentation>
	</xsd:annotation>
	<xsd:include schemaLocation="../../../../fields/1.0/schemas/fields.xsd"/>
	<xsd:include schemaLocation="../../../../groups/2.0/schemas/groups.xsd"/>
	<xsd:include schemaLocation="union-vocabs.xsd"/>

	<xsd:annotation>
		<xsd:documentation>***************************************************</xsd:documentation>
		<xsd:documentation>*****  SIMPLE TYPES (alpha order)   *****</xsd:documentation>
		<xsd:documentation>***************************************************</xsd:documentation>
	</xsd:annotation>

	<xsd:simpleType name="vocabType">
		<xsd:restriction base="rightsTypeType"/>
	</xsd:simpleType>
	<xsd:simpleType name="vocabLeafType">
		<xsd:restriction base="rightsTypeType"/>
	</xsd:simpleType>


	<xsd:annotation>
		<xsd:documentation>*******************************************</xsd:documentation>
