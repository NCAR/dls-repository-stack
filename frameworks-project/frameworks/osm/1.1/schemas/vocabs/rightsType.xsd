		<xs:documentation>***** SCHEMA PUPOSE  and INTENT  *****</xs:documentation>
		<xs:documentation>***************************************************</xs:documentation>
		<xs:documentation>Purpose: Controlled vocabulary for the type of rights field.</xs:documentation>
	</xs:annotation>

	<xs:annotation>
		<xs:documentation>**********************************************************</xs:documentation>
		<xs:documentation>*****  HISTORY OF IMPORTANT CHANGES  *****</xs:documentation>
		<xs:documentation>**********************************************************</xs:documentation>
		<xs:documentation>2012-02-17: removed Public domain, Publisher, UCAR Open Access Policy, UCAR ownership, Unknown because the field is now optional and the type that are remove are not really notice/license types. Some are really copyright holders (e.g. public domain, publisher) or methods (e.g. open access).</xs:documentation>
		<xs:documentation>2010-03-23: Creative Commons information from http://creativecommons.org/about/licenses/.</xs:documentation>
	</xs:annotation>

	<xs:annotation>
		<xs:documentation>********************************</xs:documentation>
		<xs:documentation>*****  ROOT ELEMENT *****</xs:documentation>
		<xs:documentation>********************************</xs:documentation>
		<xs:documentation>None</xs:documentation>
	</xs:annotation>

	<xs:annotation>
		<xs:documentation>************************************************</xs:documentation>
		<xs:documentation>*****  SIMPLE TYPES (alpha order)   *****</xs:documentation>
		<xs:documentation>************************************************</xs:documentation>
	</xs:annotation>
	<xs:simpleType name="rightsTypeType">
		<xs:annotation>
			<xs:documentation>***** rightsTypeType  *****</xs:documentation>
			<xs:documentation>Valid values for the element</xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:string">
			<xs:enumeration value="Creative commons:Attribution (by)"/>
			<xs:enumeration value="Creative commons:Attribution share alike (by-sa)"/>
			<xs:enumeration value="Creative commons:Attribution no derivatives (by-nd)"/>
			<xs:enumeration value="Creative commons:Attribution non-commercial (by-nc)"/>
			<xs:enumeration value="Creative commons:Attribution non-commercial no derivatives (by-nc-nd)"/>
			<xs:enumeration value="Creative commons:Attribution non-commercial share alike (by-nc-sa)"/>
			<xs:enumeration value="Opt out"/>
			<xs:enumeration value="Owner license"/>
		</xs:restriction>
	</xs:simpleType>
