<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/annotation/1.0.00/non-vocab-fields.xsd">
	<field name="Info" language="en-us" metaFormat="dlese_anno" metaVersion="1.0.00" path="/annotationRecord/moreInfo">
		<definition>more information provided in the form of single or multiple XML documents</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2005-10-05">Provide XML documents only. They may or may not be schema or DTD based.</practice>
				<practice status="current" originDate="2005-10-05">Enter only well-formed XML.</practice>
			</dos>
			
			<donts>
				<practice status="current" originDate="2005-10-05">Do not enter plain text.</practice>
				<practice status="current" originDate="2005-10-05">Do not include the XML line of &lt;?xml version="1.0" encoding="UTF-8"?&gt;</practice>
			</donts>		
		</bestPractices>

		<documentation>
			<obligation>optional</obligation>
			<min>0</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>complex</XMLdataType>
			</XMLdataTypes>
			<domain>well-formed XML documents</domain>
			<example>&lt;ab&gt;Hello world.&lt;/ab&gt;</example>
		</documentation>
	</field>
</metadataFieldInfo>
