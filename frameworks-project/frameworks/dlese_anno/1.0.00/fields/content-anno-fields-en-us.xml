<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/annotation/1.0.00/non-vocab-fields.xsd">
	<field name="Content" language="en-us" metaFormat="dlese_anno" metaVersion="1.0.00" path="/annotationRecord/annotation/content">
		<definition>a description, rating or web page that augments user interaction with the resource being annotated; this may include supportive or contextual material or actual content of an annotation</definition>
		<bestPractices>
			<dos>
				<practice status="current" originDate="2005-10-04" link1="url" style1="bold" link2="description" style2="bold" link3="rating" style3="bold">Complete at least one of the required subfields of url, description or rating.</practice>
			</dos>
		</bestPractices>

		<documentation>
			<children>
				<child>url</child>
				<child>description</child>
				<child>rating</child>
			</children>
			<obligation>required</obligation>
			<min>1</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>complex</XMLdataType>
			</XMLdataTypes>
			<domain>the children elements are the domain</domain>
			<example>&lt;url&gt;, &lt;description&gt;, &lt;rating&gt;</example>
		</documentation>
	</field>
</metadataFieldInfo>
