<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/annotation/1.0.00/non-vocab-fields.xsd">
	<field name="Name - service" language="en-us" metaFormat="dlese_anno" metaVersion="1.0.00" path="/annotationRecord/service/name">
		<definition>the name of the organization creating the metadata record</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2005-04-11">Spell out acronyms.</practice>
				<practice status="current" originDate="2006-09-21">The organization name should be a formal name of the institution or entity.</practice>
			</dos>
			
			<donts>
				<practice status="current" originDate="2005-04-11">Do not use the name of an individual person.</practice>
			</donts>
			
			<examples>
				<practice status="current" originDate="2005-04-11">Columbia University</practice>
				<practice status="current" originDate="2006-09-21">America Geological Institute (AGI)</practice>
			</examples>
		</bestPractices>

		<documentation>
			<obligation>required</obligation>
			<min>1</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>string</XMLdataType>
			</XMLdataTypes>
			<domain>free text</domain>
			<example>Columbia University</example>
		</documentation>
	</field>
</metadataFieldInfo>
