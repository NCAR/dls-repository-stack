<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/annotation/1.0.00/non-vocab-fields.xsd">
	<field name="Service" language="en-us" metaFormat="dlese_anno" metaVersion="1.0.00" path="/annotationRecord/service">
		<definition>the organization responsible in providing the annotation and making the metadata record, namely a name, catalog record number and the metadata record creation date and if appropriate, pathway information</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2005-04-11" link1="name" style1="bold" link2="record ID" style2="bold" link3="date" style3="bold">Complete the required subfields of name, record ID and date.</practice>
				<practice status="current" originDate="2005-10-04" link1="pathway" style1="bold">If appropriate, complete the subfield of pathway.</practice>
			</dos>
		</bestPractices>

		<documentation>
			<children>
				<child>name</child>
				<child>recordID</child>
				<child>date</child>
				<child>pathway</child>
			</children>
			<obligation>required</obligation>
			<min>1</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>complex</XMLdataType>
			</XMLdataTypes>
			<domain>the children elements are the domain</domain>
			<example>&lt;name&gt;, &lt;recordID&gt;</example>
		</documentation>
	</field>
</metadataFieldInfo>
