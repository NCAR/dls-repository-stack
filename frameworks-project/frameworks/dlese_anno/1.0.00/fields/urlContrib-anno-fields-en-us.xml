<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/annotation/1.0.00/non-vocab-fields.xsd">
	<field name="Url - organization" language="en-us" metaFormat="dlese_anno" metaVersion="1.0.00" path="/annotationRecord/annotation/contributors/contributor/organization/url">
		<definition>a web page of an organization, mostly likely the home page</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2005-04-15">Begin URLs with the proper Internet scheme like http://</practice>
				<practice status="current" originDate="2005-04-15">URLs with ampersands, percent 20's, equal signs, underscores and question marks are okay.</practice>
				<practice status="current" originDate="2005-04-15">Enter the URL which links directly to the annotation.</practice>
			</dos>
		</bestPractices>

		<documentation>
			<obligation>optional</obligation>
			<min>0</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>string</XMLdataType>
			</XMLdataTypes>
			<domain>free text</domain>
			<example>http://url.tothe.organization/home.html</example>
			<other>true</other>
			<notes>
				<note>Other XPATH: /annotationRecord/annotation/content/url</note>
			</notes>
		</documentation>
	</field>
</metadataFieldInfo>
