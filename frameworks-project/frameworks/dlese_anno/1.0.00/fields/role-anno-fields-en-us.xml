<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/annotation/1.0.00/role.xsd">
	<field name="Role" language="en-us" metaFormat="dlese_anno" metaVersion="1.0.00" path="/annotationRecord/annotation/contributors/contributor/@role">
		<definition>the role of a person or organization in making the annotation</definition>

		<vocabLevels number="1">
			<levelAndDeftn level="1" levelName="Role" levelDeftn="the role of a person or organization in making the annotation"/>
		</vocabLevels>
		<terms>
			<termAndDeftn vocab="Author">a person or organization who creates content</termAndDeftn>
			<termAndDeftn vocab="College educator">a person with teaching responsibilities at the university level</termAndDeftn>
			<termAndDeftn vocab="Contact">a person or organization who can provide more information</termAndDeftn>
			<termAndDeftn vocab="Contributor">a person or organization who provides content or information but not as the primary author</termAndDeftn>
			<termAndDeftn vocab="Educator">a person or organization with primary teaching responsibilities</termAndDeftn>
			<termAndDeftn vocab="Elementary educator">a person with teaching responsibilities at the elementary level</termAndDeftn>
			<termAndDeftn vocab="Evaluator">a person or organization with primary evaluation responsibilities</termAndDeftn>
			<termAndDeftn vocab="High school educator">a person with teaching responsibilities at the secondary education level</termAndDeftn>
			<termAndDeftn vocab="Librarian">a person with expertise library management</termAndDeftn>
			<termAndDeftn vocab="Middle school educator">a person with teaching responsibilities at the middle school level</termAndDeftn>
			<termAndDeftn vocab="Publisher">an organization who makes content accessible</termAndDeftn>
			<termAndDeftn vocab="Scientist">a person with expertise in a specific area of science</termAndDeftn>
			<termAndDeftn vocab="Student">a student at any educational level</termAndDeftn>
	</terms>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2005-10-05">Choose a single role from the term list.</practice>
			</dos>
		</bestPractices>

		<documentation>
			<obligation>required</obligation>
			<min>1</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>string</XMLdataType>
			</XMLdataTypes>
			<domain>controlled vocabulary</domain>
			<example>Publisher, Student, Educator</example>
		</documentation>
	</field>
</metadataFieldInfo>
