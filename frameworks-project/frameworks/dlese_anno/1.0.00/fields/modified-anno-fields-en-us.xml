<metadataFieldInfo xmlns="http://www.dlese.org/Metadata/fields" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlese.org/Metadata/fields http://www.dlese.org/Metadata/fields/annotation/1.0.00/non-vocab-fields.xsd">
	<field name="Date - modified" language="en-us" metaFormat="dlese_anno" metaVersion="1.0.00" path="/annotationRecord/service/date/@modified">
		<definition>the modification date of the annotation metadata record</definition>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2005-04-11">Enter a date to signify when the annotation metadata record is modified.</practice>
				<practice status="current" originDate="2005-04-11">Use a date format of YYYY-MM-DD, e.g. 2004-12-27.</practice>
			</dos>
			
			<donts>
				<practice status="current" originDate="2005-04-11">Do not enter days of the week.</practice>
				<practice status="current" originDate="2005-04-11">Do not enter just months or days.</practice>
			</donts>
			
			<examples>
				<practice status="current" originDate="2005-04-11">Year, month and day: 2004-12-27.</practice>
			</examples>
		</bestPractices>

		<documentation>
			<obligation>optional</obligation>
			<min>0</min>
			<max>1</max>
			<XMLdataTypes>
				<XMLdataType>date</XMLdataType>
			</XMLdataTypes>
			<domain>numerical date format</domain>
			<example>2005-04-11</example>
			<notes>
				<note>This field is an attribute on the date - service field.</note>
			</notes>
		</documentation>
	</field>
</metadataFieldInfo>
