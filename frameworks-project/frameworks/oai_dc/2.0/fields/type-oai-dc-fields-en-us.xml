<metadataFieldInfo xmlns="http://www.dlsciences.org/frameworks/fields" xmlns:DCMIType="http://purl.org/dc/dcmitype/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dlsciences.org/frameworks/fields http://www.dlsciences.org/frameworks/oai_dc/2.0/schemas/fields/type.xsd">
	<field name="Resource Type" language="en-us" metaFormat="oai_dc" metaVersion="2.0" path="/oai_dc:dc/dc:type">
		<definition attribution="Dublin Core Metadata Element Set, Version 1.1: Reference Description at http://dublincore.org/documents/dces/">the nature or genre of the content of the resource</definition>

		<vocabLevels number="1">
			<levelAndDeftn level="1" levelName="Resource Type" levelDeftn="the nature or genre of the content of the resource"/>
		</vocabLevels>

		<terms>
			<termAndDeftn vocab="Collection" attribution="Dublin Core Metadata Initiative">an aggregation of resources</termAndDeftn>
			<termAndDeftn vocab="Dataset" attribution="Dublin Core Metadata Initiative">data encoded in a defined structure</termAndDeftn>
			<termAndDeftn vocab="Event" attribution="Dublin Core Metadata Initiative">a non-persistent, time-based occurrence</termAndDeftn>
			<termAndDeftn vocab="Image" attribution="Dublin Core Metadata Initiative">a visual representation other than text.</termAndDeftn>
			<termAndDeftn vocab="InteractiveResource" attribution="Dublin Core Metadata Initiative">a resource requiring interaction from the user to be understood, executed, or experienced</termAndDeftn>
			<termAndDeftn vocab="MovingImage">a series of visual representations imparting an impression of motion when shown in succession</termAndDeftn>
			<termAndDeftn vocab="PhysicalObject" attribution="Dublin Core Metadata Initiative">an inanimate, three-dimensional object or substance</termAndDeftn>
			<termAndDeftn vocab="Service" attribution="Dublin Core Metadata Initiative">a system that provides one or more functions</termAndDeftn>
			<termAndDeftn vocab="Software" attribution="Dublin Core Metadata Initiative">a computer program in source or compiled form</termAndDeftn>
			<termAndDeftn vocab="Sound" attribution="Dublin Core Metadata Initiative">a resource primarily intended to be heard</termAndDeftn>
			<termAndDeftn vocab="StillImage" attribution="Dublin Core Metadata Initiative">a static visual representation</termAndDeftn>
			<termAndDeftn vocab="Text" attribution="Dublin Core Metadata Initiative">a resource consisting primarily of words for reading</termAndDeftn>
		</terms>

		<bestPractices>
			<dos>
				<practice status="current" originDate="2004-12-20">Includes terms describing general categories, functions, genres, or aggregation levels for content.</practice>
				<practice status="current" originDate="2004-12-20">Recommendation is to select a value from a controlled vocabulary (for example, the DCMI type vocabulary (included here).</practice>
			</dos>

			<donts>
				<practice status="current" originDate="2004-12-20" link1="format" style1="bold">Do use type to describe the physical or digital manifestation of a resource; use the format element instead.</practice>
			</donts>
			<examples>
				<practice status="current" originDate="2006-10-06" link1="StillImage:" style1="bold" link2="Katrina" url2="http://www.nnvl.noaa.gov/dlese/Katrina.jpg">StillImage: Hurricane Katrina.</practice>
				<practice status="current" originDate="2006-10-06" link1="Leaf Classification" url1="http://www.globe.gov/tctg/land_la_leafclass.pdf?sectionId=220">Classroom activity: Leaf Classification.</practice>
			</examples>
		</bestPractices>

		<documentation>
			<obligation>optional</obligation>
			<min>0</min>
			<max>unbounded</max>
			<XMLdataTypes>
				<XMLdataType>string</XMLdataType>
				<XMLdataType>Name</XMLdataType>
			</XMLdataTypes>
			<domain>controlled vocabulary and free text</domain>
			<example>MovingImage, Resource guide</example>
		</documentation>
	</field>
</metadataFieldInfo>
